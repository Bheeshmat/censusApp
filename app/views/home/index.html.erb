<div class="container">
  <div class="row">
    <h1>Welcome to the Census App</h1>
    <p>
      Please choose an action
    </p>
  </div>
  <div class="row">
    <div class="well">
      <div class="form-horizontal">
        <legend>See Population</legend>
        <div class="form-group">
          <%= form_tag("/data/populationForYearCountry", method: "get") do %>
          <div class="col-md-4">
            <%= label_tag(:country, "Select Year", class: "control-label") %>
            <%= select_tag(:country, options_for_select([['India', 'IN'], ['United Kingdom', 'UK'], ['United States', 'US'], ['Canada', 'CA']]), class: "form-control") %>
          </div>
          <div class="col-md-4">
            <%= label_tag(:year, "Select Year", class: "control-label") %>
            <%= select_tag(:year, options_for_select([['2010', 2010], ['2011', 2011], ['2012', 2012], ['2013', 2013], ['2014', 2014]]), class: "form-control") %>
            <%= submit_tag("View", class: "btn btn-primary") %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
